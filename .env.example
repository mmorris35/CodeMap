# CodeMap Environment Configuration
# Copy this to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# AWS Credentials (for Phase 5 deployment)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# CodeMap Configuration
# =============================================================================
# Environment: development, staging, production
CODEMAP_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR
CODEMAP_LOG_LEVEL=INFO

# Results storage directory (local)
CODEMAP_RESULTS_DIR=./results

# =============================================================================
# API Configuration (Phase 5)
# =============================================================================
# Storage backend: local or s3
CODEMAP_STORAGE=local

# S3 bucket for results (if CODEMAP_STORAGE=s3)
# CODEMAP_S3_BUCKET=codemap-results-YOUR_ACCOUNT_ID

# API host and port
CODEMAP_API_HOST=0.0.0.0
CODEMAP_API_PORT=8000

# =============================================================================
# EC2 Deployment (Phase 5 - used by GitHub Actions)
# =============================================================================
# EC2_HOST=your-ec2-public-ip
# EC2_USER=ec2-user
# EC2_SSH_KEY=contents-of-your-private-key
# CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net
